{% extends 'base_admin.html.twig' %}

{% block name_rubric %}Catégorie{% endblock %}

{% block content %}
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom de la catégorie</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if category.picture is not null %}
                        <img src="data:image/png;jpeg;base64,{{ category.picture }}" width=50 height=50 alt="Image">
                    {% else %}
                        Image non disponible
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">retour à la liste</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">éditer</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
