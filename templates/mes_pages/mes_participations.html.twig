{% extends "base_home.html.twig" %}

{% block title %}Evenements Universitaires - Mes participations{% endblock %}

{% block content %}
            
            
    <section class="items-grid section custom-padding">
        {% for flashMessage in app.flashes('success') %}
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-6">
                            <div class="alert alert-success text-dark">
                                {{ flashMessage }}
                            </div>
                        </div>
                    </div>
                </div>
        {% endfor %}
        {% for flashMessage in app.flashes('error') %}
            <div class="alert alert-danger text-dark">
                {{ flashMessage }}
            </div>
        {% endfor %}
        

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title">
                        <h2 class="wow fadeInUp" data-wow-delay=".4s">Toutes mes participations</h2>
                    </div>
                </div>
            </div>
            <div class="single-head">
                <div class="row">
                    {% for evenement in evenements %}
                        <div class="col-lg-4 col-md-6 col-12">
                        <!-- Start Single Grid -->
                        <div class="single-grid wow fadeInUp" data-wow-delay=".6s">
                            <div class="image">
                                <a href="item-details.html" class="thumbnail"><img src="data:image/png;base64,{{evenement.picture}}" alt="#"></a>
                                

                            </div>
                            <div class="content">
                                <div class="top-content">
                                    <a href="javascript:void(0)" class="tag">{{evenement.getCategory().getName()}}</a>
                                    <h3 class="title">
                                        <a href="item-details.html">{{evenement.name}}</a>
                                    </h3>
                                    <ul class="rating">
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><i class="lni lni-star-filled"></i></li>
                                        <li><a href="javascript:void(0)">(55)</a></li>
                                    </ul>
                                    <ul class="info-list">
                                        <li><a href="javascript:void(0)"><i class="lni lni-map-marker"></i>{{evenement.lieu}}</a></li>
                                        <li><a href="javascript:void(0)"><i class="lni lni-timer"></i> {{evenement.dateDeb ? evenement.dateDeb|date('Y-m-d Ã  H:i') : '' }}</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Grid -->
                    </div>
                    {% endfor %}
                    
                    
                </div>
            </div>
        </div>
    </section>
{% endblock %}