{% extends 'base_admin.html.twig' %}

{% block title %}Evenement{% endblock %}


    {% block name_rubric %}Editer un évènement {% endblock %}
    {% block content %}
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ evenement.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ evenement.name }}</td>
                </tr>
                <tr>
                    <th>Lieu</th>
                    <td>{{ evenement.lieu }}</td>
                </tr>
                <tr>
                    <th>Date_deb</th>
                    <td>{{ evenement.dateDeb ? evenement.dateDeb|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Date_fin</th>
                    <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>
                        {% if evenement.picture is not null %}
                            <img src="data:image/png;base64,{{ evenement.picture }}" width=50 height=50 alt="Image">
                        {% else %}
                            Image non disponible
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary mb-2">back to list</a>

        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary mb-2">edit</a>

        {{ include('evenement/_delete_form.html.twig') }}
    {% endblock %}
