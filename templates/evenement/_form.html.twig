{% extends 'base.html.twig' %}


{% block body %}
<div class="container card-body bg-primary p-5">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lieu) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.date_deb) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.date_fin) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.picture) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.category) }}
        </div>
    </div>
    <button class="btn btn-light text-dark mt-2">{{ button_label|default('Sauvegarder') }}</button>
    {{ form_end(form) }}
</div>

    
{% endblock %}
